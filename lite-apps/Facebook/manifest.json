{
  "manifest_version": 1,
  "lang": "en",
  "name": "__MSG_facebook__",
  "priority": 10,
  "start_url": "https://m.facebook.com",
  "manifest_url": "https://hermit.chimbori.com/lite-apps/Facebook.hermit",
  "theme_color": "#3b5998",
  "secondary_color": "#3b5998",
  "icons": [
    {
      "src": "icon.png"
    }
  ],
  "hermit_bookmarks": [
    {
      "name": "__MSG_most_recent__",
      "url": "https://m.facebook.com/home.php?sk=h_chr"
    },
    {
      "name": "__MSG_top_stories__",
      "url": "https://m.facebook.com/?sk=h_nor"
    },
    {
      "name": "__MSG_birthdays__",
      "url": "https://m.facebook.com/birthdays/"
    },
    {
      "name": "__MSG_events__",
      "url": "https://m.facebook.com/events/upcoming"
    },
    {
      "name": "__MSG_trending_news__",
      "url": "https://m.facebook.com/search/trending-news/"
    },
    {
      "name": "__MSG_games__",
      "url": "https://m.facebook.com/games"
    },
    {
      "name": "__MSG_photos__",
      "url": "https://m.facebook.com/photos"
    },
    {
      "name": "__MSG_notifications__",
      "url": "https://m.facebook.com/notifications"
    },
    {
      "name": "__MSG_settings__",
      "url": "https://m.facebook.com/settings"
    }
  ],
  "hermit_search": [
    {
      "name": "__MSG_search_facebook__",
      "url": "https://m.facebook.com/search/top/?q=%s"
    }
  ],
  "hermit_share": [
    {
      "name": "__MSG_post_to_facebook__",
      "url": "https://www.facebook.com/sharer/sharer.php?u=%u"
    }
  ],
  "hermit_monitors": [
    {
      "name": "__MSG_facebook_notifications__",
      "url": "https://m.facebook.com/notifications",
      "selector": "#notifications_list .touchable-notification",
      "icon": "facebook"
    }
  ],
  "related_applications": [
    {
      "id": "com.facebook.katana",
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.facebook.katana"
    }
  ],
  "tags": [
    "Popular",
    "Social"
  ]
}